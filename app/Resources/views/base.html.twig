        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar navbar-toggleable-md navbar-expand-md navbar-dark fixed-top">
                <div class="container">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <img src="{{ asset('images/EGS_Logo.png') }}" id="logoImg" alt="EGS logo" style="margin-top:-25px;margin-bottom:-20px;height:75px;" class="d-inline-block align-top">
                    </a>
    
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item{{ top_type == 'home' ? ' active' }}"><a class="nav-link" href="/">Home{{ top_type == 'home' ? ' <span class="sr-only">(current)</span>' }}</a></li>
                            <li class="nav-item dropdown{{ top_type == 'events' ? ' active' }}">
                                <a href="#" class="nav-link dropdown-toggle"  id="navbarDropdownEvents" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Events</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownEvents">
                                    <a class="dropdown-item{{ sub_type == 'lan' ? ' active' }}" href="/events/LAN"><i class="fa fa-star" aria-hidden="true"></i><span class="sr-only">Featured: </span> LAN of the Wild{{ sub_type == 'lan' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item{{ sub_type == 'lans' ? ' active' }}" href="/events/lans">LANs{{ sub_type == 'lans' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <a class="dropdown-item{{ sub_type == 'weeklies' ? ' active' }}" href="/events/weeklies">Weeklies{{ sub_type == 'weeklies' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <a class="dropdown-item{{ sub_type == 'tournaments' ? ' active' }}" href="/events/tournaments">Tournaments{{ sub_type == 'tournaments' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <a class="dropdown-item{{ sub_type == 'reqevents' ? ' active' }}" href="https://goo.gl/forms/Q7FZ5QWSAr1INAbE3">Event Request{{ sub_type == 'reqevents' ? ' <span class="sr-only">(current)</span>' }}</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown{{ top_type == 'communities' ? ' active' }}">
                                <a href="#" class="nav-link dropdown-toggle"  id="navbarDropdownCommunities" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Communities</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownCommunities">
                                    <a class="dropdown-item{{ sub_type == 'pokemon' ? ' active' }}" href="/communities/pokemon">Pokemon{{ sub_type == 'pokemon' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <a class="dropdown-item{{ sub_type == 'dota2' ? ' active' }}" href="/communities/dota2">DOTA2{{ sub_type == 'dota2' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <a class="dropdown-item{{ sub_type == 'rhythm' ? ' active' }}" href="/communities/rhythm">Rhythm{{ sub_type == 'rhythm' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <a class="dropdown-item{{ sub_type == 'minecraft' ? ' active' }}" href="/communities/minecraft">Minecraft{{ sub_type == 'minecraft' ? ' <span class="sr-only">(current)</span>' }}</a>
                                    <a class="dropdown-item{{ sub_type == 'blizzard' ? ' active' }}" href="/communities/blizzard">Blizzard{{ sub_type == 'blizzard' ? ' <span class="sr-only">(current)</span>' }}</a>
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav navbar-right">
                            <li class="nav-item{{ top_type == 'about' ? ' active' }}"><a class="nav-link" href="/about">About Us{{ top_type == 'about' ? ' <span class="sr-only">(current)</span>' }}</a></li>
                            <li class="nav-item{{ top_type == 'membership' ? ' active' }}"><a class="nav-link" href="/membership">Membership{{ top_type == 'membership' ? ' <span class="sr-only">(current)</span>' }}</a></li>
                            <li class="nav-item{{ top_type == 'contact' ? ' active' }}"><a class="nav-link" href="https://goo.gl/forms/mddKH55mYN5Qi3Ke2" data-subtype="contact">Contact{{ top_type == 'contact' ? ' <span class="sr-only">(current)</span>' }}</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container -->
            </nav>

            <div class="main">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-md-9 content">
                            {% block content %}{% endblock %}
                        </div>

                        <div class="col-12 col-md-3 aside">
                            <h4>Stay informed</h4>
                            <!-- Begin MailChimp Signup Form -->
                            <div id="mc_embed_signup">
